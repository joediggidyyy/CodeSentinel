{
  "description": "Configuration for UNC Change Detection and Auto-Fix System",
  "version": "1.0.0",
  "core_directives": {
    "security_first": true,
    "efficiency_focused": true,
    "minimalism_enforced": true
  },
  "scan_intervals": {
    "daily": 86400,
    "hourly": 3600,
    "immediate": 300
  },
  "exclusions": {
    "directories": [
      ".git",
      ".venv_313",
      ".venv_314",
      ".venv",
      "renv/library",
      "renv/staging",
      "__pycache__",
      ".pytest_cache",
      ".ipynb_checkpoints",
      "node_modules",
      ".vscode-test",
      "reports/lints"
    ],
    "file_patterns": [
      "*.log",
      "*.tmp",
      "*.bak",
      "*.swp",
      "*.pyc",
      "*.pyo",
      "*.class",
      "*.jar",
      "*.war",
      "*.ear"
    ]
  },
  "risk_assessment": {
    "safe_extensions": [
      ".md",
      ".txt",
      ".json",
      ".yml",
      ".yaml",
      ".toml",
      ".ini",
      ".cfg"
    ],
    "moderate_extensions": [
      ".py",
      ".sh",
      ".bat",
      ".ps1",
      ".r",
      ".rmd"
    ],
    "high_risk_extensions": [
      ".exe",
      ".dll",
      ".so",
      ".dylib",
      ".bin"
    ]
  },
  "auto_fix_enabled": true,
  "dry_run_default": false,
  "fix_patterns": {
    "enabled_by_default": true,
    "require_confirmation": false,
    "backup_before_fix": true
  },
  "logging": {
    "level": "INFO",
    "max_log_files": 30,
    "max_log_size_mb": 10,
    "compress_old_logs": true
  },
  "notifications": {
    "enabled": false,
    "notify_on_errors": true,
    "notify_on_fixes": false
  },
  "performance": {
    "max_file_size_mb": 10,
    "scan_timeout_seconds": 300,
    "parallel_processing": false
  },
  "safety": {
    "validate_fixes": true,
    "rollback_on_failure": false,
    "max_fixes_per_run": 100,
    "require_git_clean": false
  }
}